<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundIV"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:translationX="50dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/parralaxbg"
        tools:visibility="visible" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pickerScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/pickerTitleShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/coolveticaa"
            android:text="Pick 6 tiles"
            android:textColor="#80202020"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/pickerTitleTV"
            app:layout_constraintTop_toTopOf="@+id/pickerTitleTV" />

        <TextView
            android:id="@+id/pickerTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/coolveticaa"
            android:text="Pick 6 tiles"
            android:textColor="#F0F0F0"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/wholeTilesGrid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/wholeTilesGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/bigBacking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp">

                <ImageView
                    android:id="@+id/big0"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:onClick="randomTileClicked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/big1"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/tilebacking" />

                <ImageView
                    android:id="@+id/big1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:onClick="randomTileClicked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/big2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/big0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/tilebacking" />

                <ImageView
                    android:id="@+id/big2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:onClick="randomTileClicked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/big3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/big1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/tilebacking" />

                <ImageView
                    android:id="@+id/big3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:onClick="randomTileClicked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/big2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/tilebacking" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/smallBacking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                app:layout_constraintTop_toBottomOf="@+id/bigBacking">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/smallRow0"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/small0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small1"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small0"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small1"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small4"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small2"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small3"
                        app:srcCompat="@drawable/tilebacking" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/smallRow1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/smallRow0">

                    <ImageView
                        android:id="@+id/small5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small9"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small7"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small8"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small6"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small9"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small7"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small5"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small8"
                        app:srcCompat="@drawable/tilebacking" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/smallRow2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/smallRow1">

                    <ImageView
                        android:id="@+id/small10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small12"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small14"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small13"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small10"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small14"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small11"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small14"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small10"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small13"
                        app:srcCompat="@drawable/tilebacking" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/smallRow3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/smallRow2">

                    <ImageView
                        android:id="@+id/small15"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small16"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small16"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small17"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small15"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small17"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small18"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small16"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small18"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toStartOf="@+id/small19"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small17"
                        app:srcCompat="@drawable/tilebacking" />

                    <ImageView
                        android:id="@+id/small19"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:onClick="randomTileClicked"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/small18"
                        app:srcCompat="@drawable/tilebacking" />

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/gameScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/targetCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/clockfaceIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/targetIV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/clockface" />

            <ImageView
                android:id="@+id/clockhandIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/targetIV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/clockhand" />

            <TextView
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coolveticaa"
                android:onClick="startTimer"
                android:text="Start"
                android:textColor="#5F2424"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/targetIV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.47000003" />

            <ImageView
                android:id="@+id/targetIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/target" />

            <TextView
                android:id="@+id/targetTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coolveticaa"
                android:text="---"
                android:textColor="@android:color/white"
                android:textSize="55sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/targetIV"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/targetIV"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.26" />

            <TextView
                android:id="@+id/menuTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#72404159"
                android:fontFamily="@font/coolveticaa"
                android:onClick="menuButton"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="Menu"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/targetIV"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/boardCont"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/targetCont">

            <ImageView
                android:id="@+id/boardIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/whiteboard" />

            <TextView
                android:id="@+id/boardTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/annie_use_your_telescope"
                android:lineSpacingMultiplier="0.7"
                android:textColor="#B2000000"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/boardIV"
                app:layout_constraintEnd_toStartOf="@+id/boardIV"
                app:layout_constraintStart_toStartOf="@+id/boardIV"
                app:layout_constraintTop_toTopOf="@+id/boardIV"
                app:layout_constraintVertical_bias="0.49" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/operatorCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sumTileCont"
            app:layout_constraintVertical_bias="0.13999999">

            <LinearLayout
                android:id="@+id/operatorLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/op0"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:onClick="operatorClicked"
                    app:srcCompat="@drawable/add" />

                <ImageView
                    android:id="@+id/op1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:onClick="operatorClicked"
                    app:srcCompat="@drawable/sub" />

                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="4"
                    android:onClick="operatorClicked"
                    app:srcCompat="@drawable/clear" />

                <ImageView
                    android:id="@+id/op2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:onClick="operatorClicked"
                    app:srcCompat="@drawable/mult" />

                <ImageView
                    android:id="@+id/op3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:onClick="operatorClicked"
                    app:srcCompat="@drawable/div" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/menuOpened"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:background="#46000000"
            android:onClick="menuButton"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/boardCont"
            app:layout_constraintEnd_toEndOf="@id/boardCont"


            app:layout_constraintLeft_toLeftOf="@id/boardCont"
            app:layout_constraintRight_toRightOf="@id/boardCont"
            app:layout_constraintStart_toStartOf="@id/boardCont"
            app:layout_constraintTop_toTopOf="@id/boardCont">

            <TextView
                android:id="@+id/resetNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#CD5E5E5E"
                android:fontFamily="@font/coolveticaa"
                android:gravity="center_horizontal"
                android:onClick="menuResetNumbers"
                android:padding="2dp"
                android:shadowColor="#111111"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.2"
